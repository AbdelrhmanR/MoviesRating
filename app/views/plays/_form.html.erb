<%= simple_form_for @play   do |f| %>
<%= f.file_field :avatar %>
<%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name), include_blank: "Select Category")  %>
  <%= f.input :title ,label: "play title"  %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.button :submit %>
<% end %>